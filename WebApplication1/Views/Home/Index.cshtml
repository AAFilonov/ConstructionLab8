            margin-left: 10rem;
            margin-right: 10rem;
            margin-bottom: 5rem;
            margin-top: 2rem;
        }

        .card-deck {
            -webkit-box-orient: horizontal;
            -webkit-box-direction: normal;
            -ms-flex-flow: row wrap;
            flex-flow: row wrap;
            margin-right: -15px;
            margin-left: -15px;
        }

        footer {
            color: rgba(255, 255, 255, .75);
        }

            footer a {
                color: rgba(255, 255, 255, .5);
            }


        .flyer {
            min-height: 500px;
            padding: 5rem;
            padding-top: 7rem;
            background-color: rgba(245, 239, 209, 0.856)
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            height: 100px;
            width: 100px;
            background-image: none;
        }

            .carousel-control-next-icon:after {
                content: '>';
                font-size: 55px;
                color: black;
