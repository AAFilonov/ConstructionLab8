        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="requestModalLabel">Оставить заявку</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container">
                    @using (Html.BeginForm("CreateRequest", "Home", FormMethod.Post))
                        {
                            <div class="row">
                                <div class="form-group col-6 order-1">
                                    <input type="text" class="form-control" name="FIO" id="FIO" placeholder="Имя">
                                </div>
                                <div class="form-group col-6 order-3">
                                    <input type="email" class="form-control" id="Email" name="Email"
                                           placeholder="Электронная почта">
                                </div>

                                <div class="form-group col-6 order-2">
                                    <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Телефон">
                                </div>
                            </div>
                            <div class="row  justify-content-end ">
                                <button type="submit" class="btn btn-outline-primary col-auto  mx-3">Отправить</button>
                               
                            </div>
                     }
                </div>

            </div>
        </div>
    </div>

